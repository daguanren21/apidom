{
  "name": "@swagger-api/apidom-parser-adapter-yaml-1-2",
  "version": "1.0.0-beta.30",
  "description": "Parser adapter for parsing YAML documents into base namespace.",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "type": "module",
  "sideEffects": [
    "./dist/lexical-analysis/browser-patch.js",
    "./dist/lexical-analysis/browser-patch.cjs"
  ],
  "unpkg": "./dist/apidom-parser-apdater-yaml-1-2.browser.min.js",
  "main": "./dist/adapter-node.cjs",
  "exports": {
    "types": "./dist/apidom-parser-adapter-yaml-1-2.d.ts",
    "node": {
      "import": "./dist/adapter-node.js",
      "require": "./dist/adapter-node.cjs"
    },
    "browser": {
      "import": "./dist/adapter-browser.js"
    },
    "default": "./dist/adapter-node.cjs"
  },
  "types": "./dist/apidom-parser-adapter-yaml-1-2.d.ts",
  "scripts": {
    "build": "npm run build:wasm && npm run build:wasm:copy && tsup && api-extractor run -l -c ./config/api-extractor/api-extractor.json && npm run build:umd:browser",
    "build:umd:browser": "cross-env BABEL_ENV=browser webpack --config config/webpack/browser.config.js --progress",
    "build:wasm": "node ../../scripts/file-exists.js ../../node_modules/@tree-sitter-grammars/tree-sitter-yaml/tree-sitter-yaml.wasm && exit 0 || cd ../../node_modules/@tree-sitter-grammars/tree-sitter-yaml && tree-sitter generate ./grammar.js && tree-sitter build --wasm && node-gyp rebuild",
    "build:wasm:copy": "copyfiles -u 5 ../../node_modules/@tree-sitter-grammars/tree-sitter-yaml/tree-sitter-yaml.wasm wasm",
    "lint": "eslint ./",
    "lint:fix": "eslint ./ --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/swagger-api/apidom.git"
  },
  "author": "Vladimir Gorej",
  "license": "Apache-2.0",
  "dependencies": {
    "@swagger-api/apidom-ast": "^1.0.0-beta.30",
    "@swagger-api/apidom-core": "^1.0.0-beta.30",
    "@swagger-api/apidom-error": "^1.0.0-beta.30"
  },
  "devDependencies": {
    "@babel/runtime-corejs3": "^7.26.10",
    "@tree-sitter-grammars/tree-sitter-yaml": "=0.7.0",
    "@types/ramda": "~0.30.0",
    "esbuild-plugin-wasm": "^1.1.0",
    "ramda": "~0.30.0",
    "ramda-adjunct": "^5.0.0",
    "tree-sitter": "=0.22.1",
    "tree-sitter-cli": "=0.24.5",
    "tsup": "^8.4.0",
    "web-tree-sitter": "=0.24.5"
  },
  "files": [
    "src/**/*.mjs",
    "src/**/*.cjs",
    "dist/",
    "types/apidom-parser-adapter-yaml-1-2.d.ts",
    "wasm/",
    "LICENSES",
    "NOTICE",
    "README.md",
    "CHANGELOG.md"
  ]
}
